<HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/playlistSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <com.utilsframework.android.view.LayoutRadioButtonGroup
            android:id="@+id/playlistSwitcherContent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <view
                class="com.utilsframework.android.view.LayoutRadioButtonGroup$LayoutRadioButton"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/allSongsPlayListButton"
                android:background="@drawable/playing_mode_selector"
                app:is_selected="false">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_mylocation"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" android:layout_below="@+id/textView"
                    android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:text="All songs"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"/>
        </view>
        <view
                class="com.utilsframework.android.view.LayoutRadioButtonGroup$LayoutRadioButton"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/artistsPlayListButton"
                android:background="@drawable/playing_mode_selector"
                app:is_selected="false">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_mylocation"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" android:layout_below="@+id/textView"
                    android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:text="Artists"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"/>
        </view>
        <view
                class="com.utilsframework.android.view.LayoutRadioButtonGroup$LayoutRadioButton"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/albumsPlayListButton"
                android:background="@drawable/playing_mode_selector"
                app:is_selected="false">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_mylocation"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" android:layout_below="@+id/textView"
                    android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:text="Albums"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"/>
        </view>
        <view
                class="com.utilsframework.android.view.LayoutRadioButtonGroup$LayoutRadioButton"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/playlistsPlayListButton"
                android:background="@drawable/playing_mode_selector"
                app:is_selected="false">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_mylocation"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" android:layout_below="@+id/textView"
                    android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:text="Playlists"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"/>
        </view>
        <view
                class="com.utilsframework.android.view.LayoutRadioButtonGroup$LayoutRadioButton"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/genresPlayListButton"
                android:background="@drawable/playing_mode_selector"
                app:is_selected="false">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_mylocation"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" android:layout_below="@+id/textView"
                    android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:text="Genres"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"/>
        </view>
        <view
                class="com.utilsframework.android.view.LayoutRadioButtonGroup$LayoutRadioButton"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/countriesPlayListButton"
                android:background="@drawable/playing_mode_selector"
                app:is_selected="false">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_mylocation"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" android:layout_below="@+id/textView"
                    android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:text="Counties"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"/>
        </view>
        <view
                class="com.utilsframework.android.view.LayoutRadioButtonGroup$LayoutRadioButton"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/moodPlayListButton"
                android:background="@drawable/playing_mode_selector"
                app:is_selected="false">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@android:drawable/ic_menu_mylocation"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" android:layout_below="@+id/textView"
                    android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:text="Mood"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"/>
        </view>
    </com.utilsframework.android.view.LayoutRadioButtonGroup>
</HorizontalScrollView>